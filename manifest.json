{
  "name": "Task counter",
  "description": "Check time spent on some workspaces",
  "version": "2.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "identity", 
    "*://*.podio.com/*",   
    "*://*.google.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Check time spent on some websites",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
